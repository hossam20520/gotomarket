section#portfolio.section-bg
  .container
    header.section-header
      h3.section-title Our Portfolio
    .row
      .col-lg-12
        ul#portfolio-flters
          li.filter-active(data-filter='*') All
          li(data-filter='.filter-app') App
          li(data-filter='.filter-card') Card
          li(data-filter='.filter-web') Web
    .row.portfolio-container
      .col-lg-4.col-md-6.portfolio-item.filter-app
        .portfolio-wrap
          img.img-fluid(src='img/portfolio/app1.jpg', alt='')
          .portfolio-info
            h4
              a(href='#') App 1
            p App
            div
              a.link-preview(href='img/portfolio/app1.jpg', data-lightbox='portfolio', data-title='App 1', title='Preview')
                i.ion.ion-eye
              a.link-details(href='#', title='More Details')
                i.ion.ion-android-open
